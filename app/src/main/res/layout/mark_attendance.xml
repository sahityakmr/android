<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.mark_attendance"
    android:background="#006400"
    android:padding="20dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBox"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Attendace PLACE YOUR FINGER HERE"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/received_value_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/received_value_id2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/received_value_id"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12"
        android:textColor="#fff"
        android:textSize="20dp" />


    <Button
        android:id="@+id/fingerstring"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/received_value_id2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fbfefd"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Place your finger here" />


    <Button
        android:text="Mark Attendance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerstring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Login5" />

</LinearLayout>