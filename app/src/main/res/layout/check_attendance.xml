<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.mark_attendance"
    android:background="@drawable/dashboard_uii"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBox"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="CHECK ATTENDANCE PORTAL"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/idBoxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="5"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/black"
        android:hint="Enter your ID"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/idDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="5"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/black"
        android:hint="Pick Date"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:layout_below="@+id/idBox"
        tools:ignore="ObsoleteLayoutParam" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        app:cardBackgroundColor="#000"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:id="@+id/card_view991"
        >
        <!--        <ImageView-->
        <!--            android:layout_width="200dp"-->
        <!--            android:layout_height="200dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:id="@+id/img"-->
        <!--            android:contentDescription="@string/app_name" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_card1"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_card21"
            android:layout_below="@+id/text_card"
            android:textColor="#fff"
            />



    </androidx.cardview.widget.CardView>


    <Button
        android:text="View Attendance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerstring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Login59" />

</LinearLayout>